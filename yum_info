
yum --disablerepo="*" --enablerepo="<desired-repo-id>" install package-name

yum --disablerepo="*" --enablerepo="rhel-8-for-x86_64-baseos-rpms,rhel-8-for-x86_64-appstream-rpms"  install  vsftpd

